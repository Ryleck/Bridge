extends layout
block content
    script(src='./javascripts/calculNbPlanchette.js')
    h1= title
    form(action='mouvement' method='get')
        | Nombre d'équipes
        select#selectNbEquipes(name='nbEquipes' class='selectScore' onchange='calculeNbRondes()')
            option(value='', disabled, selected) Choisir
            option(value='2') 2
            option(value='4') 4
            option(value='5') 5
            option(value='6') 6
            option(value='7') 7
            option(value='8') 8
        //input(type='text' name='nbEquipes' placeholder='Nombres d\'équipes')
        //br
        //| Nombres de planchettes
        //select#selectNbPlanchettes(name='nbPlanchettes' class='selectScore' disabled)
            option(value='', disabled, selected) Choisir
        input#nbPls(type='text' name='nbPlanchettes' placeholder='Nombres de planchettes' class='selectScorePls' oninput='nbPlanchettesPRds()' disabled)
        input#nbRondes(type='text' name='nbRondes' placeholder='Nombres de rondes' class='selectScoreRds' disabled)
        br
        | Type de score
        select(name='score' class='selectScore')
            option(value='', disabled, selected) Choisir
            option(value='top') Duplicata
            option(value='imp') Points imp
        br
        input(type='submit' value='Créer')