extends layout
block content
    div.divPage
        img(src="images/baraja-de-cartas-americanas.png" alt="Cartes" class="imageCartes")
        script(src='./javascripts/calculNbPlanchette.js')
        h1= title
        form(action='feuilleNoms' method='get')
            | Nombre d'équipes
            //select#selectNbEquipes(name='nbEquipes' class='selectScore' onchange='calculeNbRondes()')
            select#selectNbEquipes(name='nbEquipes' class='selectScore')
                option(value='', disabled, selected) Choisir
                //option(value='2') 2
                //option(value='4') 4
                option(value='5') 5
                option(value='6', selected) 6
                //option(value='7') 7
                option(value='8') 8
            //input(type='text' name='nbEquipes' placeholder='Nombres d\'équipes')
            //br
            //| Nombres de planchettes
            //select#selectNbPlanchettes(name='nbPlanchettes' class='selectScore' disabled)
                option(value='', disabled, selected) Choisir
            input#nbPls(type='text' name='nbPlanchettes' placeholder='Nombres de planchettes' value='20' class='selectScorePls')
